<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LogWorkScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Work"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/select_tractor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        />

    <Spinner
        android:id="@+id/work_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/work_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Work Name"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/payment_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/payment_hourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly" />

        <RadioButton
            android:id="@+id/payment_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental" />
    </RadioGroup>

    <EditText
        android:id="@+id/work_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Work Expenses"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Remarks"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>