<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backround"
    tools:context=".LogWorkScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Work"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Name"
        android:maxLength="30"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/work_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:clickable="true"
        android:maxLength="30"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginBottom="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="Select Tractor"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>
        <Spinner
            android:id="@+id/select_tractor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="Select Work Type"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

        <Spinner
            android:id="@+id/work_type"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

    </LinearLayout>





    <AutoCompleteTextView
        android:id="@+id/work_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Work Name"
        android:imeOptions="actionNext"
        android:maxLength="25"
        android:singleLine="true"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/rental_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Select Rent Type"></TextView>

        <RadioButton
            android:id="@+id/rental_hourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly" />

        <RadioButton
            android:id="@+id/rental_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip" />
    </RadioGroup>

    <EditText
        android:id="@+id/total_rent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Rent"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:imeOptions="actionNext"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/trip_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trip Expenses"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:imeOptions="actionNext"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Remarks"
        android:maxLength="100"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>